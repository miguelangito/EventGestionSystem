<div style="display: flex; flex-direction: column;">
    <h2><%=@event.name%></h2>
    <h3><%=@event.date%></h3>
    <span><%=@event.description%></span>
    <br>
    <%= link_to edit_event_path(@event.id) do%>
        <button>Update event</button>
    <%end%>
    <br>    
    <%= button_to "Delete event", @event, method: :delete%>
</div>
