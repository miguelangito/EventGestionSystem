<% @events.each do |event|%>
    <h2 class="name"><%=event.name%></h2>
    <h3 class="date"><%=event.date%></h3>
    <span class="description"><%=event.description%></span>
    <br>
    <br>
    <%= link_to event_path(event.id) do %>
        <button class="event">details</button>
    <%end%>
    <hr>
<%end%>